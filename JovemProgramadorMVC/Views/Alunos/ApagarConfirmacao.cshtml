

@model AlunoModel

<form asp-controller="Alunos" asp-action="ApagarConfirmacao" method="post">

    <div class="text-center">
        <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
    </div>

    <a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Alunos" role="button">Cancelar exclusão</a>
    <a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Alunos" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
</form>
